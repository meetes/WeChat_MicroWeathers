/* pages/setting/setting.wxss */
.setting {
  font-size:28rpx;
}

.list {
  overflow:hidden;
  padding:0 40rpx;
  background:#fff;
  margin-bottom:20rpx;
}

/* 标题 */
.title {
  font-size:32rpx;
  color:#21b68e;
  margin:26rpx 0;
}


/* 内容 */
.content {

}

.item {
  display:flex;
  justify-content:space-between;
  align-items:center;
  height:100rpx;
}

.item .tip {
  font-size:22rpx;
  color:#999;
  display:flex;
  justify-content:flex-start;
  align-items:center;
}

.item .tip image{
  width:24rpx;
  height:24rpx;
  margin-right:10rpx;
}

.item .more {
  width:32rpx;
  height:32rpx;
}

.item slider {
  width:100%;
  margin:0;
}

.sub .item {
  padding-left:20rpx;
}

.subtitle {
  font-size:28rpx;
  color:#21b68e;
}



/* 更新提示框 */
.toast {

}
.toast .mask {
  position:fixed;
  z-index:9;
  top:0;
  right:0;
  bottom:0;
  left:0;
  margin:auto;
  background:rgba(0, 0, 0, .5);
}
.toast .wrapper {
  position:fixed;
  z-index:10;
  top:0;
  right:0;
  bottom:0;
  left:0;
  margin:auto;
  background:#fff;
  font-size:24rpx;
  color:#333;
  width:60%;
  height:400rpx;
  border-radius:14rpx;
  padding:46rpx 28rpx;
}
.toast .box {
  height:400rpx;
  overflow:scroll;
}
.toast .t_title {
  font-size:28rpx;
  color:#21b68e;
  margin:20rpx 0;
  padding:0;
}
.toast .t_content {
  line-height:1.8em;
  text-align:justify;
}
.toast .t_content text {
  display:block;
  margin-bottom:10rpx;
}